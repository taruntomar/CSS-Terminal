<RichTextBox x:Class="CSSTerminal.Sessions.TelnetSessionNS.TarminalLayoutDocumentNS.TerminalNS.TerminalRichTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSSTerminal.Sessions.TelnetSessionNS.TarminalLayoutDocumentNS.TerminalNS"
             mc:Ignorable="d" 
               FontFamily="Consolas" 
                FontSize="18" 
                AcceptsReturn="True" 
                CaretBrush="Transparent" 
                Padding="0"
                Margin="0"
         SelectionBrush="Yellow"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 Background="Teal"
                 Foreground="White"  Keyboard.PreviewKeyDown="RTB_PreviewKeyDown">
    <FlowDocument>
        <Paragraph x:Name="ParaText" ></Paragraph>
    </FlowDocument>
</RichTextBox>
